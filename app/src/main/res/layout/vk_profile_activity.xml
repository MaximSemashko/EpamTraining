<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar_vk"
        android:layout_width="420dp"
        android:layout_height="250dp"
        android:background="@drawable/profile"
        android:theme="@style/AppThemeVk">

        <RelativeLayout
            android:layout_width="420dp"
            android:layout_height="250dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/go_back_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_arrow_left" />

            <TextView
                android:id="@+id/profile_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingTop="185dp"
                android:text="@string/vk_profile_name"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                app:fontFamily="@font/abeezee" />

            <TextView
                android:id="@+id/users_permission_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_name_text_view"
                android:fontFamily="sans-serif"
                android:text="@string/onlinePhone"
                android:textColor="@color/colorGray"
                android:textSize="18sp"
                app:fontFamily="@font/abeezee" />

            <Button
                android:id="@+id/photo_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/profile_name_text_view"
                android:layout_marginLeft="362dp"
                android:background="@drawable/ic_add_a_photo" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/edit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_vk"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/button_shape"
        android:text="@string/edit_button"
        android:textAllCaps="false"
        android:textColor="@color/vkTextColor"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/status_icon_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/edit_button"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_message" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_button"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/status_icon_image"
        android:text="@string/status"
        android:textColor="@color/textInProfile"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/friends_icon_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/status_icon_image"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_friends" />

    <TextView
        android:id="@+id/number_of_friends_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_icon_image"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/friends_icon_image"
        android:text="@string/number_of_friends"
        android:textColor="@color/textInProfile"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/friend_first_image_view"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@+id/status_icon_image"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/number_of_friends_text_view"
        android:background="@drawable/profile" />

    <ImageView
        android:id="@+id/friend_second_image_view"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@+id/status_icon_image"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/friend_first_image_view"
        android:background="@drawable/second_friend" />

    <ImageView
        android:id="@+id/friend_third_image_view"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@+id/status_icon_image"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/friend_second_image_view"
        android:background="@drawable/third_friend" />

    <ImageView
        android:id="@+id/place_of_residence"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/number_of_friends_text_view"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_home" />

    <TextView
        android:id="@+id/current_place_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/number_of_friends_text_view"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/place_of_residence"
        android:text="@string/place_of_residence"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/show_more_info"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@+id/place_of_residence"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_more_horiz" />

    <TextView
        android:id="@+id/show_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/place_of_residence"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/show_more_info"
        android:text="@string/show_info"
        android:textColor="@color/vkTextColor"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/profile_avatar_image_view"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_below="@id/show_more_info"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/profile" />

    <EditText
        android:id="@+id/notes_edit_text"
        android:layout_width="250dp"
        android:layout_height="52dp"
        android:layout_below="@id/show_more_info"
        android:layout_toRightOf="@+id/profile_avatar_image_view"
        android:background="@null"
        android:hint="@string/what_is_new_hint"
        android:inputType="text"
        android:textColor="@color/vkTextColor"
        android:textSize="22sp" />

    <ImageButton
        android:id="@+id/attach_photo_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@+id/show_more_info"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/notes_edit_text"
        android:background="@drawable/ic_photo_camera" />

    <ImageButton
        android:id="@+id/attach_history_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@+id/show_more_info"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/notes_edit_text"
        android:background="@drawable/ic_history" />

    <TextView
        android:id="@+id/albums_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attach_history_button"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:text="@string/albums"
        android:textColor="@color/colorBlack"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/number_of_photos_in_album_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attach_history_button"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/albums_text_view"
        android:text="@string/number_of_photos"
        android:textColor="@color/textInProfile"
        android:textSize="22sp" />

    <HorizontalScrollView
        android:id="@+id/scrol_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/albums_text_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/profile" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/second_friend" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/third_friend" />
        </LinearLayout>

    </HorizontalScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorWhite"
        app:menu="@menu/vk_menu_bottom_navigation" />

</RelativeLayout>