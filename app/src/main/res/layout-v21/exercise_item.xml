<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp"
    android:elevation="3dp"
    app:cardBackgroundColor="@color/colorAccent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/exercise_number_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            tools:text="1" />

        <TextView
            android:id="@+id/exercise_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exercise_number_view"
            android:text="@string/name"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/exerciseNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exercise_number_view"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/exercise_name_view"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            tools:text="Pushups" />

        <TextView
            android:id="@+id/sets_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exerciseNameTextView"
            android:text="@string/sets"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/exerciseSetsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exerciseNameTextView"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/exercise_name_view"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            tools:text="5" />

    </RelativeLayout>

</android.support.v7.widget.CardView>